<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Major.MainGame">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#ff4e33">
            <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="Black" SizeChanged="absoluteLayout_SizeChanged" />
            <Button x:Name="StartGame" Text="Start playing" BackgroundColor="#7d2929" Clicked="Start_playing" TextColor="#fff"/>
            <Button x:Name="quit" Text="Quit Game"  BackgroundColor="#7d2929" Clicked="quit_Clicked" TextColor="#fff"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>